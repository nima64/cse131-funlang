(fun (sumrange start stop step)
  (let ((step (if (isbool step) (if (= (cast Bool step) true) 1 -1) step))
        (res 0)
        (curr start))
   (loop
     (if (if (> (cast Num step) 0) (>= (cast Num curr) (cast Num stop)) (<= (cast Num curr) (cast Num stop))) (break res)
         (block
           (set! res (+ res (cast Num curr)))
           (set! curr (+ (cast Num curr) (cast Num step))))))))
